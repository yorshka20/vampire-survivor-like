{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@ecs": ["packages/ecs/src/index.ts"],
      "@ecs/*": ["packages/ecs/src/*"],
      "@web-client": ["packages/web-client/src/main.ts"],
      "@web-client/*": ["packages/web-client/src/*"],
      "@render": ["packages/render/src/index.ts"],
      "@render/*": ["packages/render/src/*"]
    },
    "typeRoots": ["./node_modules/@types", "./global.d.ts"]
  },
  "include": ["packages/*/src/**/*.ts", "packages/*/src/**/*.d.ts", "global.d.ts"],
  "exclude": ["node_modules", "**/dist"]
}
