{
  "version": 2,
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm build",
  "outputDirectory": "dist",
  "routes": [
    { "src": "/simulator/(.*\\..*)", "dest": "/simulator/$1" },
    { "src": "/simulator", "dest": "/simulator/index.html" },
    { "src": "/simulator/.*", "dest": "/simulator/index.html" },
    { "src": "/(.*\\..*)", "dest": "/$1" },
    { "src": "/.*", "dest": "/index.html" }
  ]
}
